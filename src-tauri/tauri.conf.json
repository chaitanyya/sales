{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Qualify",
  "version": "0.1.0",
  "identifier": "sh.qualify.app",
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "Qualify",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
